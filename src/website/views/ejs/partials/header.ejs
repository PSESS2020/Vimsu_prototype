        aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="container" id="navbarNavAltMarkup">
        <div class="navbar-nav">
            <div class="d-flex justify-content-around flex-row">
                <% if (locals.loggedIn === true) { %>
                    <!--
                    <a class="p-2 mr-5 action_button nav-item nav-link navbar-brand" href="/upload">
                        <div class="octicons octicon octicon-cloud-upload">
                            <p id="octicon_text">
                                Upload
                            </p>
                        </div>
                    </a>
                    --> 
                    
                    <a class="p-2 ml-5 mr-5 action_button nav-item nav-link navbar-brand" href="/logout">
                        <div class="octicons octicon octicon-sign-out">
                            <p id="octicon_text">
                                Log out
                            </p>
                        </div>
                    </a>
                    <a class="p-2 ml-5 mr-5 action_button nav-item nav-link navbar-brand" href="/account">
                        <div class="octicons octicon octicon-gear">
                            <p id="octicon_text">
                                Account Settings
                            </p>
                        </div>
                    </a>
                <% } else { %>
                    <a class="p-2 mr-5 action_button nav-item nav-link navbar-brand" href="/login">
                        <div class="octicons octicon octicon-sign-in">
                            <p id="octicon_text">
                                Log in
                            </p>
                        </div>
                    </a>

                    <a class="p-2 ml-5 mr-5 action_button nav-item nav-link navbar-brand" href="/register">
                        <div class="octicons octicon octicon-pencil">
                            <p id="octicon_text">
                                Register
