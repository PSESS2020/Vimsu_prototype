<!DOCTYPE html>
<html>

<head>
	<%- include('partials/head') %>
</head>

<body>
	<div class="container">
		<%- include('partials/header') %>
        <section class="row align-items-center justify-content-center" id="content">
            <div class="col-lg-6 col-md-12 col-sm-12" id="title">
                <h2>Virtual Interactive Meeting Simulator</h2>
                <h6>Discover the 2.5D virtual conference experience with us!</h6>
                <% if (locals.loggedIn === true) { %>
                  <a class="btn primary-button mt-4 p-2" href="/game">
                    <span>Enter conference</span>
                  </a>
                <% } else { %>
                  <a class="btn primary-button mt-4 p-2" href="/register">
                    <span>Try it now for free</span>
                  </a>
                  <a class="btn primary-button ml-xl-3 ml-lg-1 ml-md-2 ml-sm-3 ml-1 mt-4 p-2" href="/login">
                    <span>Sign in</span>
                  </a>
                <% } %>
            </div>
            <div class="col-lg-6 col-md-12 col-sm-12" id="slideshow">
                <div id="carouselControls" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                      <div class="carousel-item active">
                        <img class="d-block w-100" src="website/assets/Foyer_transparent.png" alt="First slide">
                      </div>
                      <div class="carousel-item">
                        <img class="d-block w-100" src="website/assets/Foodcourt_transparent.png" alt="Second slide">
                      </div>
                      <div class="carousel-item">
                        <img class="d-block w-100" src="website/assets/Reception_transparent.png" alt="Third slide">
                      </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselControls" role="button" data-slide="prev">
                      <i class="fa fa-angle-left fa-2x"></i>
                      <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselControls" role="button" data-slide="next">
                      <i class="fa fa-angle-right fa-2x"></i>
                      <span class="sr-only">Next</span>
                    </a>
                  </div>
            </div>
        </section>
	</div>
	<%- include('partials/footer') %>
</body>

</html>